    <title>Who Got Next?</title>
    <style>
        .button {
            text-align: center;
            justify-content: right;
            width: 250px;
            height: 500px;
            font-size: 24px;
            margin: 60px;
            font-family: Garamond, sans-serif;
        }
        .button-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            justify-content: bottom;
            font-family: Garamond, sans-serif;
            margin: 50px;
        }
        .circle {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-top: 5px;
            border: 2px solid black; 
            background-color: green;
        }
        .hidden-window {
            display: none; /* Initially hidden */
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 200px;
            height: 175px;
            background-color: white;
            border: 2px solid black;
            z-index: 9999; /* Ensure it appears above other content */
            padding: 20px;
            text-align: center;
            
            font-family: Garamond, sans-serif;
        }
        .green { background-color: green; }
        .blue { background-color: blue; }
        .yellow { background-color: yellow; }
        .grey { background-color: grey;}

        .header {
            padding: 40px;
            text-align: center;
            background: #bc271a;
            color: rgb(1, 1, 1);
            font-size: 30px;
            font-family: Garamond, sans-serif
        }
        
        .header_2 {
            padding: 40px;
            text-align: center;
            color: rgb(1, 1, 1);
            font-size: 30px;
        }

        .img {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
            }

        .link {
            font-family: Garamond, sans-serif;
            text-align: center;
        }

    </style>
    <script>
        // Define an array of colors
        var colors = ["green", "green", "green", "green", "green", "green"];

        // Define an array to store players ahead for each court
        var playersAhead = [0, 0, 0, 0, 0, 0];

        // Function to change the color of the circle
        function changeColor(index) {
            if (playersAhead[index] <= 5) {
                colors[index] = "yellow";
            } else if (playersAhead[index] > 5) {
                colors[index] = "blue";
            } else {
                colors[index] = "green";
            }
            document.getElementById('circleDisplay' + index).className = "circle " + colors[index];
        }
        
        x = 1;
        // Function to add yourself to the queue
        function incrementPlayersAhead(index) {
            x - 1;
            if(x=0){
            playersAhead[index]++;
            changeColor(index);
            document.getElementById('playersAhead' + index).innerText = "Players Ahead: " + playersAhead[index];
        }
    }

        // Function to remove yourself from queue
        function incrementPlayersAhead(index) {
            x + 1;
            if(x=1){
            playersAhead[index]--;
            changeColor(index);
            document.getElementById('playersAhead' + index).innerText = "Players Ahead: " + playersAhead[index];
            }
        }


        // Function to toggle the visibility of the hidden window associated with the button
        function toggleHiddenWindow(buttonId) {
            var hiddenWindow = document.getElementById("hiddenWindow" + buttonId);
            if (hiddenWindow.style.display === "none") {
                hiddenWindow.style.display = "block"; // Show the window
            } else {
                hiddenWindow.style.display = "none"; // Hide the window
            }
        }

        
        
        


    </script>
</head>
<body>

    
    <!-- Header -->
          
        
    <div class="header">

    <h1>Who Got Next?</h1> 
    
    </div>
   

<!-- Display the circles -->
<div class="button-container">
